<%# show single artist %>

<h2> Artist: <%= @artist.name %></h2>

<h3>Artist Albums</h3>

  <% if @artist.albums %>
    <ul>
      <% @artist.albums.each do |album| %>
        <li><a href="/albums/<%= album.id %>"></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no albums listed for this artist yet.</p>
  <% end %>

  <form action="/artists/<%= @artist.id() %>/edit" method="get">
    <input name="_method" type="hidden" value="edit">
    <button type="submit">Edit Artist</button>
  </form>

  <p><a href="/artists">Return to artist list</a></p>